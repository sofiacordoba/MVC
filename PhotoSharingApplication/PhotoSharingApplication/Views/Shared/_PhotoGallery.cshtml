@model IEnumerable<PhotoSharingApplication.Models.Photo>

@foreach (var item in Model)
{
<div class="photo-index-card">
    <h3>"@item.Title"</h3>

    @if (item.PhotoFile != null)
    {
<img class="photo-index-card-img" src="@Url.Action("GetImage","Photo",new { id = item.PhotoID })" />}
    <div class="photo-metadata">
        <p>
            <span class="display-label">
                Created By:
            </span>

            <span class="display-field">d
                @Html.DisplayFor(model => item.UserName)
            </span>

        </p>
        <p>
            <span class="display-label">
                Created On:
            </span>

            <span class="display-field">
                @Html.DisplayFor(model => item.CreatedDate)
            </span>

        </p>

        @Html.ActionLink("Display", "Display", new { id = item.PhotoID })

    </div>
</div>}